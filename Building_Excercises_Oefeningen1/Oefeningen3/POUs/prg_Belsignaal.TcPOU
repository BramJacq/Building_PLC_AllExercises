<?xml version="1.0" encoding="utf-8"?>
<TcPlcObject Version="1.1.0.1" ProductVersion="3.1.4024.15">
  <POU Name="prg_Belsignaal" Id="{d7551642-c751-4d8c-9494-27556209977f}" SpecialFunc="None">
    <Declaration><![CDATA[PROGRAM prg_Belsignaal
VAR
	Sensor1, Sensor2		AT		%I*		:BOOL;
	Bel						AT		%Q*		:BOOL;
	bBinnen          : BOOL;
	BinnenKomen: R_TRIG;
	BuitenGaan: R_TRIG;
END_VAR
]]></Declaration>
    <Implementation>
      <ST><![CDATA[BinnenKomen(CLK := Sensor1);
BuitenGaan(CLK := Sensor2);

IF BinnenKomen.Q AND NOT Sensor2 THEN
    bBinnen := TRUE;      // S01 eerst → binnen
ELSIF BuitenGaan.Q AND NOT Sensor1 THEN
    bBinnen := FALSE;     // S02 eerst → buiten
END_IF

Bel := bBinnen AND (Sensor1 OR Sensor2);
]]></ST>
    </Implementation>
    <LineIds Name="prg_Belsignaal">
      <LineId Id="47" Count="9" />
      <LineId Id="16" Count="0" />
    </LineIds>
  </POU>
</TcPlcObject>